<%= form_for(@task) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :due_date %>
  <%= f.text_field :due_date %>

  <%= f.label :status %>
  <%= f.check_box :status %>

  <%= f.submit %>
<% end %>

<%= link_to("Cancel", task_path) %>
